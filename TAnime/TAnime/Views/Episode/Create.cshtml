@model CreateEpisodeViewModel
@inject AppDbContext context
@{
    ViewBag.Title = "Thêm phim";
    var Movies = ViewBag.Movies as List<Movies>;
}
<div class="container">
    <form asp-controller="Episode" asp-action="Create" method="post" class="mt-2">
        <div class="row">
            <div class="col-sm-2 form-group">
                <label asp-for="_MovieId"></label>
            </div>
            <div class="col-sm-10 form-group">
                <select class="form-control" asp-for="_MovieId">
                    @foreach (var item in Movies)
                    {
                        <option value="@item.MovieId">@item.MovieName</option>
                    }
                </select>
                <span asp-validation-for="_MovieId" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2 form-group">
                <label asp-for="EpisodeCode"></label>
            </div>
            <div class="col-sm-10 form-group">
                <input type="text" asp-for="EpisodeCode" class="form-control" />
                <span asp-validation-for="EpisodeCode" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2 form-group">
                <label asp-for="EpisodeMovie"></label>
            </div>
            <div class="col-sm-10 form-group">
                <input type="text" asp-for="EpisodeMovie" class="form-control" />
                <span asp-validation-for="EpisodeMovie" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2 form-group">
                <label asp-for="DateTime"></label>
            </div>
            <div class="col-10">
                <input class="form-control" type="datetime-local" asp-for="DateTime">
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2 form-group">
                <label asp-for="VideoPath"></label>
            </div>
            <div class="col-sm-10 form-group">
                <textarea asp-for="VideoPath" rows="4" cols="50" class="form-control"></textarea>
                <span asp-validation-for="VideoPath" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2 form-group">

            </div>
            <div class="col-sm-10 form-group">
                <button type="submit" class="btn btn-primary btnn">Thêm</button>
                <button type="reset" class="btn btn-danger btnn">Hủy Bỏ</button>
                <a asp-controller="Episode" asp-action="Index" class="btn btn-warning btnn">Trở Lại</a>
            </div>
        </div>
    </form>
</div>
