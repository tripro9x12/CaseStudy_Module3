@model EditRoleViewModel
@{
    ViewBag.Title = "Chỉnh sửa phân quyền";
}
<h4>Quản lý phân quyền &gt; @ViewBag.Title</h4>
<form asp-controller="Role" asp-action="Edit" method="post" class="mt-2">
    <input hidden asp-for="RoleId" />
    <div class="row">
        <div class="col-sm-2 form-group">
            <label asp-for="RoleName"></label>
        </div>
        <div class="col-sm-10 form-group">
            <input type="text" asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-sm-12 form-group text-center">
            <button type="submit" class="btn btn-primary">Cập Nhật</button>
            <a asp-controller="Role" asp-action="Index" class="btn btn-warning">Trở Lại</a>
        </div>
    </div>
</form>
