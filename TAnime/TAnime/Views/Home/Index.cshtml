@using X.PagedList.Mvc.Core;
@using X.PagedList;
@model IPagedList<MovieViewModel>
@{
    ViewData["Title"] = "TAnime - Xem phim hoạt hình miễn phí";
}
<div class="text-center my-3">
    <div class="row mx-auto my-auto">
        <div id="recipeCarousel" class="carousel slide w-100" data-ride="carousel">
            <div class="carousel-inner w-100 row" role="listbox">             
                    
                    
            </div>
                <a class="carousel-control-prev" href="#recipeCarousel" role="button" data-slide="prev" style="z-index: 999">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#recipeCarousel" role="button" data-slide="next" style="z-index: 999">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
        </div>
    </div>
</div>

<div class="new-update mt-4">
    <a asp-controller="Home" asp-action="Index">Mới Cập Nhật</a>
</div>
<div class="row mt-3" style="box-sizing: border-box !important">
    @foreach (var item in Model)
    {
        <div class="product">
            <a asp-controller="Home" asp-action="Detail" asp-route-id="@item.MovieId" class="pr-2">
                <img src="~/images/@item.ImageOfVideo" />
                <div>
                    <img src="~/images/overlays-video.png" class="overlay" />
                </div>
                <p class="pr-2" style="overflow:hidden;height:35px">@item.MovieName</p>
            </a>
        </div>
    }
</div>
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
@section Scripts{
    <script src="~/js/site.js" asp-append-version="true"></script>
}